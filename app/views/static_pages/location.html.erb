<% @items = Item.all.order(priority: :desc) %>
<div class="center jumbotron">
  <h1 class="title">Location Food Pantry</h1>

  <div class="container">
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-sm-6 col-md-4 col-lg-4">
          <% @name =  item.name %>
          <%= render 'layouts/item' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
