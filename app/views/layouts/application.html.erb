<!DOCTYPE html>
<html>
  <head>
    <title>MicaFoodpantry</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="../">Poweshiek Food Pantry</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="http://www.micaonline.org/" target="_blank">MICA Online</a></li>
            <li><a href="www.grinnell.edu">Home</a></li>
            <li><a href="www.grinnell.edu">About</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="../">Admin Login</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>

  <footer class="footer">
    <div class="container contactInfo">
      <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
          <h2 style="color:white;">CONTACT US!</h2>
          <p>Poweshiek Food Pantry<br/>
          <a style= "color: #333" href="mailto:info@micaonline.org?Subject=Hi Mica!">Email Us!</a>
          </p> 
        </div>
      </div>
  </footer>
</html>
